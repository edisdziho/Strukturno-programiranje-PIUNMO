#include <iostream>
#include <math.h>
using namespace std;
/*Napisati programski kod za unos dvije varijable:
âž¢ ð‘› (cjelobrojna vrijednost za koju vaÅ¾i (ð‘› > 0))
âž¢ ð‘¥ (cjelobrojna vrijednost za koju vaÅ¾i (ð‘¥ > 0))
Program treba da ispiÅ¡e sve brojeve u opsegu [1, ð‘›] za koje vaÅ¾i sljedeÄ‡e:
âž¢ SaÄinjeni su od ponavljanja jedne te iste cifre
âž¢ Parni su
âž¢ Suma svih cifara je veÄ‡a ili jednaka od ï¿½, za test podatke unesitse N=100 i x=4*/
bool istaCifra(int broj) {
	int cifra = broj % 10;
	while (broj > 0) {
		if (broj % 10 != cifra)
			return false;
		broj /= 10;
	}
	return true;
}
int suma(int broj) {
	int suma = 0;
	while (broj > 0) {
		suma += broj % 10;
		broj /= 10;
	}
	return suma;
}

int main() {
	int n;
	int x;
	do {
		cout << "Unesi cijeli broj N." << endl;
		cin >> n;
		cout << "Unesi cijeli broj X." << endl;
		cin >> x;
	} while (!(n > 0 && x>0)); {
		cout << "Brojevi od iste cifre & sume cifara vece od X & parnih: " << endl;
		for (int i = 1; i < n; i++) {
			if (istaCifra(i) == true && suma(i)>x && i%2==0) {
				cout << i << endl;
			}
	}
	}


	system("pause>0");
	return 0;
}
