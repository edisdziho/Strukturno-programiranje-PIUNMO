#include <iostream>
#include <math.h>

using namespace std;
/*Napišite program, poštujući sve faze procesa programiranja,
koji će ispisati sve troznamenkaste brojeve koji su jednaki sumi faktorijela svojih znamenki – ABC = A! + B! + C! 
*/
int faktorijel(int broj)
{
    int rezultat = 1;
    for (int i = 2; i <= broj; i++)
        rezultat *= i;

    return rezultat;
}

bool provjera(int broj)
{
    int a, b, c;
    c = broj % 10;
    b = (broj / 10) % 10;
    a = (broj / 100) % 10;

    return broj == faktorijel(a) + faktorijel(b) + faktorijel(c);
}

int main()
{
    for (int i = 100; i <=999; i++)
        if (provjera(i))
            cout << i << endl;

    system("pause>0");
    return 0;
}
